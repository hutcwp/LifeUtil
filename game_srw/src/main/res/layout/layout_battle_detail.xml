<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_circle"
    android:padding="15dp">

    <com.hutcwp.srw.view.BattleSimpleDetail
        android:id="@+id/battle_simple_detail_left"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hutcwp.srw.view.BattleSimpleDetail
        android:id="@+id/battle_simple_detail_right"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hutcwp.srw.view.ChatMsgView
        android:id="@+id/view_chat_msg"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battle_simple_detail_left" />


</androidx.constraintlayout.widget.ConstraintLayout>