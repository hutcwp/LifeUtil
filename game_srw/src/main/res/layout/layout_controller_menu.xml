<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="200dp"
    android:layout_gravity="bottom|center"
    android:background="@drawable/bg_controller_menu"
    android:padding="20dp">

    <Button
        android:id="@+id/btn_move"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="移动"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_attack"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="攻击"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_move" />

    <Button
        android:id="@+id/btn_status"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="状态"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_attack" />

    <Button
        android:id="@+id/btn_skill"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="精神"
        app:layout_constraintStart_toEndOf="@id/btn_move"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_wait"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="待命"
        app:layout_constraintStart_toStartOf="@id/btn_skill"
        app:layout_constraintTop_toBottomOf="@id/btn_skill" />


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="140dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>