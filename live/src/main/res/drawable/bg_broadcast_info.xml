<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">
    <stroke android:color="#D87093"
        android:width="1dp"/>
    <corners android:radius="35dp" />
    <solid android:color="#ff66ff" />

    <!-- 调整angle实现水平渐变，垂直渐变或者对角渐变 -->
    <gradient
        android:angle="-45"
        android:centerX="0.5"
        android:centerY="0.4"
        android:startColor="#aaFF1493"
        android:centerColor="#aaFF00FF"
        android:endColor="#aaff66ff"
        android:type="linear" />
</shape>